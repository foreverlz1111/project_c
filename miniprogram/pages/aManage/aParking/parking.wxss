/* pages/aManage/aParking/parking.wxss */
.b1 {
  z-index: 7;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.b2 {
  z-index: 6;
  background-color: white;
  border: 1px solid;
  
  min-width: 35%;
  max-width: 65%;
  max-height: 35%;
  max-height: 65%;
}

.t_w {
  margin-top: 20rpx;
}

.b2 image {
  width: 65%;
  height: 65%;
}

.t_image {
  width: 60rpx;
  height: 60rpx;
}

.picker_box {
  border-radius: 4px;
  padding:3px;
  margin:2vh 1vh 0 1vh;
  flex-direction: column;
  position: relative;
  border: 1px solid;
}

.picker_box label {
  
  display: inline-block;
  width: 40%;
}
.picker_box .picker_box_view {
  margin-left: 1vh;
  border: 1px solid;
  min-width:20%;
  max-width: auto;
  display: inline-block;
}
.picker_box .picker_box_radio {
  margin-left: 1vh;
  min-width:20%;
  max-width: auto;
  display: inline-block;
}
.picker_box .picker_box_view image{
  margin-left: 1vh;
  display: inline-block;
  width: 10px;
  height: 10px;
}
.control_bnt{
  display: flex;
  flex-direction: row;
}
.control_bnt .confirm_bnt{
  border-radius: 4px;
  margin: 2vh;
  background-color:lavender;
}
.control_bnt .cancel_bnt{
  border-radius: 4px;
  margin: 2vh;
  background-color: whitesmoke;
}
.scroll {
  width: auto;
  margin-left: 1vh;
  margin-right: 1vh;
  height: 15vh;
  border: 1px solid;
  border-radius: 8px;
  margin: 1vh;
}

.scroll label {
  margin-top: 1vh;
  margin-left: 1vh;
  display: flex;
}

.collect_form {
  width: auto;
  height: auto;
  border-radius: 8px;
  margin: 1vh;
}

.add_bnt{
  width: 30px;
  height: 30px;
}
.add_box {
  /* 上 右 下 左 */
  margin: 2vh 2vh 0 2vh;
  width: 20%;
  /* 取消注释后马上导致无法点击bug
  float: left; */
  flex-direction: row;
  display: flex;
  border: 1px solid;
  padding: 5px;
  border-radius: 6px;
}
.add_button {
  height: 22px;
  width: 22px;
  margin-left: 1vh;
}
.add_button_text {
  margin-left: 1vh;
}

.item {
  margin-top: 2vh;
  margin-bottom: 2vh;
  border: 1px solid;
  width: 98%;
  min-height: 10vh;
  max-height: 30vh;
  border-radius: 8px;
  position: relative;
}

.item .deletion {
  height: 20px;
  width: 20px;
  float: right;
  margin-right: 1vh;
  margin-top: 1vh;
  position: relative;
  display: inline;
}

.item label {
  display: flex;
  margin-top: 1vh;
  margin-left: 1vh;
  margin-bottom: 1vh;
}
.item button {
  font-size: smaller;
  margin: 0 auto;
  width: 20%;
}
.item .alteration_text{
  border-bottom: 1px solid;
  margin-left: 4px;
  border-radius: 4px;
  color: blue;
}