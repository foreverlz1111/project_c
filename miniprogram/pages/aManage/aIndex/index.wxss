/* pages/aManage/aIndex/index.wxss */

.container{
  padding: 20rpx 0;
  background: #000000;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vw;
  height: 20vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}
.tip {
  position: relative;
  margin-right: 50%;
}
.tip view{
  margin-top: 1vh;
}
.tip label{
  color: white;
}
#borderline {
  position: relative;
  margin-top: 7vh;
  width: 100%;
  height: 30px;
  background-color: #f7f7f7;
  padding: 1vh;
}

#boderline_text {
  font-size: 90%;
  display: inline;
  padding-left: 10px;
}
#borderline_image {
  height: 20px;
  width: 20px;
  padding-left: 2px;
  margin-top: 2pt;
}

#class_view {
  display: flex;
  border-bottom: 1px solid;
}

.class_button {
  margin-top: 10%;
  display: flex;
  width: 50%;
  flex-direction: column;
  align-items: center;
}

.class_image {
  height: 20vh;
  width: 20vh;
  border-radius: 1%;
}

.class_text {
  
  margin-bottom: 20px;
  margin-top: 5px;
}
