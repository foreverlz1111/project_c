<view class="container">
  <image class="background-image" src="../../static/assets/background.svg" />
  <view class="counter-warp">
    <view class="header-content">
      <view class="text">
        <view class="text-header">BANNER</view>
        <view class="text-content">____________________</view>
      </view>
    </view>
    <view class="box">
      <view class="list">
      <view class="refresh" bind:tap="{{refresh_button?'_refresh_info':'_refresh_info_error'}}">
      <image mode="aspectFit"  src="{{refresh_button?'../../static/images/button-refresh-arrow.png':'../../static/images/button-refresh-arrow-false.png'}}"></image></view>
        <view class="list-item" wx:for="{{info}}" wx:key="index" data-item="{{item}}">
          <label class="list-item-label">{{item.name}}：
            <text wx:if="{{item.key !== 'park_status' && item.key !== 'gate_status' }}">{{item.value}}</text>
            <text wx:if="{{item.key === 'gate_status' }}" class="{{item.value?'':'stop'}}">{{item.value ? '正常':'暂停'}}</text>
            <text wx:if="{{item.key === 'park_status' }}" class="{{item.value?'':'stop'}}">{{item.value ? '正常':'暂停'}}</text>
          </label>
        </view>
      </view>
      <view class='login'>
        <button hover-class="loginBtnt" class="loginBtn" bind:tap='login'>开启客服会话 ></button>
      </view>
    </view>
  </view>
</view>